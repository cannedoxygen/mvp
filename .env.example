# API Keys
SPORTSDATAIO_API_KEY=your_sportsdataio_key_here
ODDS_API_KEY=your_odds_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
WEATHER_API_KEY=your_weather_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./baseball_betting.db
# Alternative PostgreSQL example: postgresql://username:password@localhost/baseball_betting_db

# API Configuration
API_PREFIX=/api/v1
API_DEBUG=false
API_TIMEOUT=15
API_RETRY_ATTEMPTS=3

# SportsData.io Configuration
SPORTSDATAIO_BASE_URL=https://api.sportsdata.io/v3/mlb

# Environment Settings
ENV=development

# Simulation Configurations
SIMULATION_COUNT=1000
SHOW_DETAILED_STATS=true

# Data Update Frequencies (in seconds)
SCHEDULE_UPDATE_FREQUENCY=3600  # 1 hour
ODDS_UPDATE_FREQUENCY=900       # 15 minutes
WEATHER_UPDATE_FREQUENCY=1800   # 30 minutes
LINEUPS_UPDATE_FREQUENCY=600    # 10 minutes

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hour in seconds
CACHE_DIR=./data/cache

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_ENABLE_MOCK_DATA=true
VITE_SIMULATION_COUNT=10
VITE_SHOW_DETAILED_STATS=true
VITE_SHOW_DEBUG_INFO=false

# Deployment
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Optional: OpenAI Model Selection
OPENAI_MODEL=gpt-4